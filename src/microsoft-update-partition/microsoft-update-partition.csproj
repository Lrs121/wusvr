<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Microsoft.PackageGraph.MicrosoftUpdate</RootNamespace>
    <PackageId>Microsoft.PackageGraph.MicrosoftUpdate</PackageId>
    <Authors>Cristian Petruta</Authors>
    <Product />
    <Description>Provides an object model for Microsoft Update packages. Provides an object model for applicability and other Windows-client specific metadata. Provides indexers for fast package lookup by attributes.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>Microsoft Window Update WSUS WU</PackageTags>
    <PackageReleaseNotes>Initial release.</PackageReleaseNotes>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <AssemblyName>package-graph-microsoft-update</AssemblyName>
    <BaseOutputPath>..\..\out\microsoft-update-partition</BaseOutputPath>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>../documentation/xml-autogenerated/microsoft-update-partition.xml</DocumentationFile>
    <FileVersion>3.0.0.0</FileVersion>
    <AssemblyVersion>3.0.0.0</AssemblyVersion>
    <ProductVersion>3.0.0.0</ProductVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Indexers\**" />
    <Compile Remove="Metadata\Applicability\Rules\**" />
    <EmbeddedResource Remove="Indexers\**" />
    <EmbeddedResource Remove="Metadata\Applicability\Rules\**" />
    <None Remove="Indexers\**" />
    <None Remove="Metadata\Applicability\Rules\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MathNet.Numerics" Version="5.0.0" />
    <PackageReference Include="Microsoft.Azure.Storage.Blob" Version="11.2.3" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="SharpZipLib" Version="1.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\microsoft-update-webservices\microsoft-update-webservices.csproj" />
  </ItemGroup>

</Project>
