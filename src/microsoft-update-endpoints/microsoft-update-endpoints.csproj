<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Microsoft.PackageGraph.MicrosoftUpdate.Endpoints</RootNamespace>
    <AssemblyName>package-graph-endpoints-microsoft-update</AssemblyName>
    <PackageId>Microsoft.PackageGraph.MicrosoftUpdate.Endpoints</PackageId>
    <Authors>Cristian Petruta</Authors>
    <Company>Microsoft Corp.</Company>
    <Product />
    <Description>Endpoint implementations for the MicrosoftUpdate partition of the package graph. Implements the server role in the Windows Update MUv6 rotocol and both server and client roles in the WSUS protocol.</Description>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <BaseOutputPath>..\..\out\microsoft-update-endpoints</BaseOutputPath>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>../documentation/xml-autogenerated/microsoft-update-endpoints.xml</DocumentationFile>
    <FileVersion>3.0.0.0</FileVersion>
    <AssemblyVersion>3.0.0.0</AssemblyVersion>
    <ProductVersion>3.0.0.0</ProductVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="SoapCore" Version="1.1.0.31" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="ClientSync\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\microsoft-update-partition\microsoft-update-partition.csproj" />
    <ProjectReference Include="..\microsoft-update-webservices\microsoft-update-webservices.csproj" />
  </ItemGroup>

</Project>
